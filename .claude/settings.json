{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {"type": "command", "command": ".claude/hooks/post-test.sh"},
          {"type": "command", "command": ".claude/hooks/check-claude-md.sh"}
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": ".claude/hooks/pre-commit-check.sh"}
        ]
      }
    ]
  }
}
